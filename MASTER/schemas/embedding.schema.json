{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://master.ai/schemas/embedding.schema.json",
  "title": "Embedding",
  "description": "A vector embedding for semantic search",
  "type": "object",
  "required": ["content", "vector", "namespace"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "content": {
      "type": "string",
      "description": "The original text content"
    },
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Vector representation"
    },
    "namespace": {
      "type": "string",
      "description": "Namespace for organizing embeddings"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the embedding was created"
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://master.ai/schemas/persona.schema.json",
  "title": "Persona",
  "description": "A persona definition for the AI system",
  "type": "object",
  "required": ["name", "description", "traits", "system_prompt"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the persona"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the persona"
    },
    "greeting": {
      "type": "string",
      "description": "Default greeting message"
    },
    "traits": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key personality traits"
    },
    "style": {
      "type": "string",
      "description": "Communication style"
    },
    "voice": {
      "type": "object",
      "properties": {
        "pitch": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "description": {
          "type": "string"
        }
      }
    },
    "focus": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Areas of focus and expertise"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Information sources"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Operating rules for the persona"
    },
    "disclaimer": {
      "type": "string",
      "description": "Optional disclaimer text"
    },
    "system_prompt": {
      "type": "string",
      "description": "System prompt for the LLM"
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://master.ai/schemas/debate.schema.json",
  "title": "Debate",
  "description": "A multi-model council debate",
  "type": "object",
  "required": ["topic", "opinions", "timestamp"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the debate"
    },
    "topic": {
      "type": "string",
      "description": "The topic or question being debated"
    },
    "opinions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["model", "opinion"],
        "properties": {
          "model": {
            "type": "string",
            "description": "Model that provided the opinion"
          },
          "tier": {
            "type": "string",
            "description": "Tier of the model"
          },
          "opinion": {
            "type": "string",
            "description": "The opinion text"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "consensus": {
      "type": "string",
      "description": "Final consensus reached"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the debate occurred"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Duration in milliseconds"
    }
  }
}

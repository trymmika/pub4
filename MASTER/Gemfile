# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
group :development, :test do
  gem "minitest", "~> 5.20"   # Testing (OpenBSD bundled)
  gem "rubocop", "~> 1.60"    # Linting (free vs LLM!)
  gem "vcr", "~> 6.2"         # Record HTTP for tests
  gem "webmock", "~> 3.20"    # Mock HTTP requests
end

group :development do
  gem "pry", "~> 0.14"        # Better REPL
end


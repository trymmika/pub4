# -----------------------------------------------------------------------------
# Tier 1: Essential (add now)
# -----------------------------------------------------------------------------
gem "dotenv", "~> 3.1"        # Load .env for API keys
gem "tty-prompt", "~> 0.23"   # Interactive prompts (y/n, select)
gem "tty-spinner", "~> 0.9"   # LLM wait indicators
gem "rouge", "~> 4.2"         # Syntax highlighting (pure Ruby)
gem "pastel", "~> 0.8"        # Terminal colors (256 support)

# -----------------------------------------------------------------------------
# Tier 2: Should Add (next iteration)
# -----------------------------------------------------------------------------
gem "tty-markdown", "~> 0.7"  # Render LLM markdown responses
gem "tty-table", "~> 0.12"    # Table formatting
gem "parallel", "~> 1.24"     # Multi-core file scanning
gem "http", "~> 5.1"          # Modern HTTP client (vs Net::HTTP)

